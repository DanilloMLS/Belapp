<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.InicialActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibBarba"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/ibOlho"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ibUnha"
                app:layout_constraintTop_toBottomOf="@+id/ibCabelo"
                app:srcCompat="@mipmap/barba" />

            <ImageButton
                android:id="@+id/ibCabelo"

                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/ibBarba"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ibDepilacao"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/cabelo" />

            <ImageButton
                android:id="@+id/ibUnha"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/ibSobrancelha"
                app:layout_constraintEnd_toStartOf="@+id/ibBarba"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ibDepilacao"
                app:srcCompat="@mipmap/manicure" />

            <ImageButton
                android:id="@+id/ibDepilacao"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/ibUnha"
                app:layout_constraintEnd_toStartOf="@+id/ibCabelo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/depilacao" />

            <ImageButton
                android:id="@+id/ibSobrancelha"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ibOlho"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ibUnha"
                app:srcCompat="@mipmap/sombrancelhas" />

            <ImageButton
                android:id="@+id/ibOlho"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ibSobrancelha"
                app:layout_constraintTop_toBottomOf="@+id/ibBarba"
                app:srcCompat="@mipmap/maquiagem" />

            <ImageButton
                android:id="@+id/ibSpa"
                android:layout_width="wrap_content"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="@drawable/bordasarr"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ibSobrancelha"
                app:layout_constraintTop_toBottomOf="@+id/ibBarba"
                app:srcCompat="@drawable/spa" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>